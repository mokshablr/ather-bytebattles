{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "$(check) build_m0",
            "type": "shell",
            "command": "python3",
            "args": [
                "build.py",
                "--platform",
                "cyt2b75_m0plus",
                "--build",
                "build_m0",
                "--type",
                "debug",
            ],
            "detail": "Build application",
            "problemMatcher": [],
        },
